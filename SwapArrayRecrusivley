import java.util.Scanner;

public class ReverseArrayRecursion {

  public static void reverse(int arr[], int start, int end) {

      int temp;

      //Swap logic used in the assignment for swapping pairs of consecutive digits
      temp = arr[start];
      arr[start] = arr[end];
      arr[end] = temp;

      //Recursively swap an array
      reverse(arr, start+1, end-1);
   }


